        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommended_list_view_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/curved_view_basic"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/recommended_list_view_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/curved_view_basic"
                    android:text="             "
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/themeColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/recommended_list_view_prev_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/curved_view_basic"
                    android:text="             "
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="#a9a9a9"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <!--android:layout_margin="5dp"-->

                <android.support.v7.widget.CardView
                    android:id="@+id/recommended_card_view_under_image_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    mlns:app="http://schemas.android.com/apk/res-auto">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/recommended_list_view_image"
                    android:layout_width="114dp"
                    android:layout_height="114dp"
                    app:sriv_right_bottom_corner_radius="10dp"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_left_bottom_corner_radius="10dp"
                    android:scaleType="centerCrop"
                    app:sriv_right_top_corner_radius="10dp" />
                <!--app:sriv_left_top_corner_radius="10dp"-->
                <!--app:sriv_left_bottom_corner_radius="10dp"-->

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!--</LinearLayout>-->

            <!--</LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:background="#f1d3d3d3" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

