<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/payment_back_arrow"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_arrow_back_theme_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.02"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageopersonaluse"
                    android:text="@string/payment1"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/ageopersonaluse"
                android:text="@string/choose_your_payment_method1"
                android:textColor="@color/themeColor"
                android:textSize="23dp"
                />

            <RadioGroup
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                    android:layout_marginLeft="15dp"
                    android:id="@+id/radio_button_credit_card"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textSize="17dp"
                    android:theme="@style/EditTextTheme"
                    android:layout_gravity="left"
                    android:text="@string/credit_debit_card"
                    android:fontFamily="@font/ageopersonaluse"
                    />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_payment_crecit_card" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="15dp"
                    android:background="#d3d3d3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginLeft="15dp"
                        android:id="@+id/radio_button_cod"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="17dp"
                        android:theme="@style/EditTextTheme"
                        android:layout_gravity="left"
                        android:text="@string/cash_on_delivery"
                        android:fontFamily="@font/ageopersonaluse"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_payment_cod" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="15dp"
                    android:background="#d3d3d3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginLeft="15dp"
                        android:id="@+id/radio_button_paypal"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="17dp"
                        android:layout_gravity="left"
                        android:theme="@style/EditTextTheme"
                        android:text="@string/paypal"
                        android:fontFamily="@font/ageopersonaluse"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_payment_paypal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="15dp"
                    android:background="#d3d3d3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginLeft="15dp"
                        android:id="@+id/radio_button_google_wallet"
                        android:layout_width="250dp"
                        android:theme="@style/EditTextTheme"
                        android:layout_height="40dp"
                        android:textSize="17dp"
                        android:layout_gravity="left"
                        android:text="@string/google_wallet"
                        android:fontFamily="@font/ageopersonaluse"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_payment_google_wallet" />
                </LinearLayout>

            </RadioGroup>

            <TextView
                android:id="@+id/final_payment_text_button"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:background="@drawable/curved_view_sharp_theme_background"
                android:fontFamily="@font/ageopersonaluse"
                android:gravity="center"
                android:text="@string/make_payment"
                android:textColor="@color/white_color"
                android:textSize="17dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
