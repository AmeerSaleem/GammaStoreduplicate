<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flash_sale_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="1">

    <!--First Card-->
    <LinearLayout
        android:id="@+id/recommended_column_first_card"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_weight="1">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:mlns="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            mlns:app="http://schemas.android.com/apk/res-auto">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/recommended_column_product_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/product_image_laptop"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_left_top_corner_radius="10dp"
                app:sriv_right_bottom_corner_radius="0dp"
                app:sriv_right_top_corner_radius="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="165dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommended_column_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="HP laptop Pro 13 with Touch Bar"
                    android:textColor="#696969" />


                <TextView
                    android:id="@+id/recommended_column_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="$ 2020"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recommended_column_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="1dp"
                        android:gravity="center_vertical"
                        android:text="4.8"
                        android:textSize="11dp" />

                    <RatingBar
                        android:id="@+id/recommended_column_rating_bar"
                        style="?attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="3.6dp"
                        android:numStars="1"
                        android:rating="1"
                        android:stepSize="0.1"
                        android:theme="@style/RatingBar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="end">


                        <TextView
                            android:id="@+id/recommended_column_items_sold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:gravity="bottom"
                            android:text="932 items sold"
                            android:textSize="11dp" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="14dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>

