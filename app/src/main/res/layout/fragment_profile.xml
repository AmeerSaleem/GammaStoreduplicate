            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/rounded_image_view_profile_image1"
            android:background="@color/transparent"
            android:fontFamily="@font/ageopersonaluse"
            android:text="@string/sara_m"
            android:textColor="@color/themeColor"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_user_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_user_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/rounded_image_view_profile_image1"
            android:background="@color/transparent"
            android:fontFamily="@font/ageopersonaluse"
            android:text="@string/e_commerce_shopper"
            android:textColor="@color/white_color"
            android:textSize="17dp"
            android:textStyle="normal" />

    </RelativeLayout>



