            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_girl"
            app:finalHeight="@dimen/image_final_width"
            app:finalYPosition="2dp"
            android:layout_marginLeft="15dp"
            app:sriv_border_color="@color/themeColor"
            app:sriv_border_width="2dp"
            app:sriv_left_bottom_corner_radius="200dp"
            app:sriv_left_top_corner_radius="200dp"
            app:sriv_right_bottom_corner_radius="200dp"
            app:sriv_right_top_corner_radius="200dp"
            app:startHeight="2dp"
            app:startToolbarPosition="2dp"
            app:startXPosition="2dp" />
            <!--app:layout_behavior="com.example.gammastore.ImageBehavior"-->
            <!--app:layout_anchor="@id/collapsing_toolbar_profile"-->
            <!--app:layout_anchorGravity="bottom|center_horizontal"-->

        <TextView
