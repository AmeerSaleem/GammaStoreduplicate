<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card_details_back_arrow"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_arrow_back_theme_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.02"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ageopersonaluse"
                    android:text="Card Details"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/trend_gradient_theme_final_chrome_intro">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp">
                        <!--android:background="@drawable/curved_view_credit_card"-->

                        <com.joooonho.SelectableRoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="205dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bank_card_template"
                            app:sriv_left_bottom_corner_radius="10dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="10dp"
                            app:sriv_right_top_corner_radius="10dp" />

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="35dp"
                                android:src="@drawable/visa_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.05"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.07" />


                            <TextView
                                android:id="@+id/card_number_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/etherion_free"
                                android:text="@string/_9876_2312_3212_4213"
                                android:textColor="@color/white_color"
                                android:textSize="24dp"
                                android:textStyle="normal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ageopersonaluse"
                                android:gravity="left"
                                android:text="@string/card_holder_s_name"
                                android:textColor="@color/white_color"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.07"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.8"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ageopersonaluse"
                                android:gravity="left"
                                android:text="@string/sara_m"
                                android:textColor="@color/white_color"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.07"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ageopersonaluse"
                                android:gravity="right"
                                android:text="@string/cvv_cvc"
                                android:textColor="@color/white_color"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.9"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/etherion_free0"
                                android:gravity="right"
                                android:text="@string/_548"
                                android:textColor="@color/white_color"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.9"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.9" />

                        </android.support.constraint.ConstraintLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/ageopersonaluse"
                        android:text="@string/card_information"
                        />


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:mlns="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        mlns:app="http://schemas.android.com/apk/res-auto">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.07"
                                app:layout_constraintVertical_bias="0.1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:text="@string/my_personal_card"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.07"
                                app:layout_constraintVertical_bias="0.3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#a9a9a9"
                                android:textSize="15dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:text="@string/card_number"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.11"
                                app:layout_constraintVertical_bias="0.4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/etherion_free0"
                                android:text="@string/_9876_2312_3212_4213"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.07"
                                app:layout_constraintVertical_bias="0.6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#a9a9a9"
                                android:textSize="15dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:text="@string/card_holder_s_name"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.055"
                                app:layout_constraintVertical_bias="0.7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:text="@string/sara_m"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.94"
                                app:layout_constraintVertical_bias="0.3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#a9a9a9"
                                android:textSize="15dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:text="@string/valid_upto"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.94"
                                app:layout_constraintVertical_bias="0.4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/etherion_free0"
                                android:text="@string/_12_29"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.94"
                                app:layout_constraintVertical_bias="0.6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#a9a9a9"
                                android:textSize="15dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:text="@string/cvv_cvc"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.94"
                                app:layout_constraintVertical_bias="0.7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/etherion_free0"
                                android:text="@string/_548"
                                />

                            <LinearLayout
                                android:id="@+id/edit_card_details_button"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/curved_view_edit_card_details"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/white_color"
                                    android:gravity="center"
                                    android:textSize="17dp"
                                    android:text="@string/edit_details"
                                    android:fontFamily="@font/ageopersonaluse"
                                    />

                            </LinearLayout>

                        </android.support.constraint.ConstraintLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>