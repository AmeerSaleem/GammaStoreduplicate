        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:mlns="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/promo_item"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/curved_view_basic"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!--android:background="@drawable/themeshade1"-->

                <ImageView
                    android:id="@+id/promotion_image"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/discount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginRight="4dp"
                            android:background="@color/placeholder_grey"
                            android:gravity="bottom"
                            android:text="                            "
                            android:textColor="#fff"
                            android:textSize="11dp" />

                    </LinearLayout>
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="5dp"    -->
                    <!--/>-->

                    <TextView
                        android:id="@+id/discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/placeholder_grey"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

