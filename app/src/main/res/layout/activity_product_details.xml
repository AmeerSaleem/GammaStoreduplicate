<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    tools:context=".ProductDETAILsActivity">
    <!--android:layout_marginTop="-700dp"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar2_catcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transitionName="toolbarTransitionName"
                    android:visibility="gone"
                    />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/toolbar_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/product_detail_back_arrow"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_arrow_back_theme_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.02"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ageopersonaluse"
                        android:text="@string/product_detail"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <ImageView
                        android:id="@+id/product_detail_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search_theme_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/product_scroll"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/trend_gradient_theme_final_chrome_intro"
                        android:scrollbars="none"
                        app:layout_constraintBottom_toTopOf="@id/bottom_bar_layout"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!--ViewPager with indicator-->

                        <LinearLayout
                            android:id="@+id/layout_scroll_root"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/frame_viewpager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/toolbar_product_detail">

                                <android.support.v7.widget.CardView
                                    android:id="@+id/card_viewpager1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#d3d3d3"
                                    android:elevation="25dp"
                                    app:cardCornerRadius="0dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="false">


                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/viewpager_product_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="310dp"

                                        android:layout_below="@+id/toolbar_product_detail"
                                        android:layout_gravity="top" />


                                    <com.itsronald.widget.ViewPagerIndicator
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="260dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="#00000000"
                                        android:gravity="center_vertical"
                                        app:dotRadius="4.5dp"
                                        app:selectedDotColor="@color/lightThemeColor"
                                        app:unselectedDotColor="@color/themeColor"
                                        app:viewPagerId="@id/viewpager_product_detail" />
                                </android.support.v7.widget.CardView>

                            </FrameLayout>

                            <LinearLayout
                                android:visibility="invisible"
                                android:id="@+id/layout_for_scroll_up"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white_color"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/product_detail_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/ageopersonaluse"
                                    android:text="Some Product Name here"
                                    android:textColor="#000000"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/product_detail_cost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:text="$ 1324"
                                    android:textColor="#000000"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="28dp"
                                    android:layout_marginBottom="10dp">


                                    <LinearLayout
                                        android:layout_width="65dp"
                                        android:layout_height="28dp"
                                        android:layout_marginLeft="15dp"
                                        android:background="@drawable/curved_view_light_theme"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/product_detail_rating_score"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="10dp"
                                            android:text="4.8"
                                            android:textColor="#ffffff"
                                            android:textSize="15dp"

                                            />

                                        <ImageView
                                            android:id="@+id/product_deail_rating_star"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="3dp"
                                            android:src="@drawable/ic_star_white_24dp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="28dp"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="15dp"
                                        android:gravity="right|center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/product_detail_items_sold"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="89"
                                            android:textColor="#a9a9a9"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ageopersonaluse"
                                            android:text=" items sold"
                                            android:textColor="#a9a9a9"
                                            android:textSize="15dp"

                                            />

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>





                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="13dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@color/transparent"

                                    />

                                <!--android:layout_marginLeft="15dp"-->
                                <!--android:layout_marginRight="15dp"-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white_color"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/ageopersonaluse"
                                        android:text="@string/size"
                                        android:textColor="#000000"
                                        android:textSize="17dp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/size_back_1"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:background="@drawable/curved_view_sharp_theme_border">

                                            <TextView
                                                android:id="@+id/size_text_1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center|center_horizontal"
                                                android:gravity="center"
                                                android:text="S"
                                                android:textColor="@color/themeColor" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/size_back_2"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/curved_view_sharp_theme_border">

                                            <TextView
                                                android:id="@+id/size_text_2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center|center_horizontal"
                                                android:gravity="center"
                                                android:text="M"
                                                android:textColor="@color/themeColor" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/size_back_3"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/curved_view_sharp_theme_border">

                                            <TextView
                                                android:id="@+id/size_text_3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center|center_horizontal"
                                                android:gravity="center"
                                                android:text="L"
                                                android:textColor="@color/themeColor" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/size_back_4"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/curved_view_sharp_theme_border">

                                            <TextView
                                                android:id="@+id/size_text_4"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center|center_horizontal"
                                                android:gravity="center"
                                                android:text="XL"
                                                android:textColor="@color/themeColor" />


                                        </LinearLayout>


                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="#d3d3d3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:fontFamily="@font/ageopersonaluse"
                                        android:text="@string/color"
                                        android:textColor="#000000"
                                        android:textSize="17dp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/color_border_1"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_marginLeft="0dp"
                                            android:background="@drawable/curved_view_sharp_grey_border">
                                            <!--android:background="@drawable/curved_view_sharp_theme_border"-->

                                            <ImageView
                                                android:id="@+id/black_selector"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_margin="2dp"
                                                android:background="@android:color/transparent"
                                                android:src="#000000" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/color_border_2"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/curved_view_sharp_grey_border">
                                            <!--android:background="@drawable/curved_view_sharp_theme_border"-->

                                            <ImageView
                                                android:id="@+id/white_selector"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_margin="2dp"
                                                android:background="@android:color/transparent"
                                                android:src="@color/white_color" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:id="@+id/color_border_3"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/curved_view_sharp_grey_border">

                                            <ImageView
                                                android:id="@+id/blue_selector"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_margin="2dp"
                                                android:src="#004fff" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="13dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@color/transparent" />
                                <!--android:background="#11118f4f"-->


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white_color"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/ageopersonaluse"
                                        android:text="@string/description"
                                        android:textColor="#000000"
                                        android:textSize="17dp"
                                        android:textStyle="bold"

                                        />

                                    <com.ms.square.android.expandabletextview.ExpandableTextView
                                        android:id="@+id/expand_text_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        app:animDuration="200"
                                        app:maxCollapsedLines="4">


                                        <TextView
                                            android:id="@id/expandable_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="15dp"
                                            android:layout_marginBottom="10dp"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/ageopersonaluse"
                                            android:lineSpacingExtra="3dp"
                                            android:maxLines="4"
                                            android:textSize="16dp" />
                                        <!--android:text="@string/lorem_ipsum_text"-->


                                        <ImageButton
                                            android:id="@id/expand_collapse"
                                            android:layout_width="50dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginBottom="0dp"
                                            android:background="@android:color/transparent"
                                            android:fontFamily="@font/ageopersonaluse"
                                            android:text="@string/view_more"
                                            android:textColor="@color/themeColor"
                                            android:textSize="17dp" />

                                    </com.ms.square.android.expandabletextview.ExpandableTextView>


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="13dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@color/transparent" />
                                <!--android:background="#11118f4f" -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white_color"
                                    android:orientation="vertical">

                                    <android.support.constraint.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="17dp"
                                            android:layout_marginTop="10dp"
                                            android:fontFamily="@font/ageopersonaluse"
                                            android:text="@string/reviews"
                                            android:textColor="#000000"
                                            android:textSize="17dp"
                                            android:textStyle="bold"
                                            app:layout_constraintHorizontal_bias="0"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_goneMarginLeft="15dp" />


                                        <TextView
                                            android:id="@+id/view_all_reviews"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="15dp"
                                            android:fontFamily="@font/ageopersonaluse"
                                            android:text="@string/see_more"
                                            android:textColor="@color/themeColor"
                                            android:textSize="17dp"
                                            app:layout_constraintHorizontal_bias="0.998"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />


                                    </android.support.constraint.ConstraintLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="horizontal">

                                        <RatingBar
                                            android:id="@+id/recommended_card_view_rating"
                                            style="@style/Base.Widget.AppCompat.RatingBar.Medium"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginBottom="5dp"
                                            android:numStars="5"
                                            android:padding="0dp"
                                            android:rating="4"
                                            android:theme="@style/RatingBar" />

                                        <TextView
                                            android:id="@+id/no_of_reviews"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:text="8" />

                                        <TextView
                                            android:id="@+id/review_tag"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ageopersonaluse"
                                            android:text="@string/reviews"
                                            android:textColor="#000000" />

                                    </LinearLayout>

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/recycler_reviews_product_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="15dp"
                                        android:nestedScrollingEnabled="false" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="13dp"
                                    android:background="@color/transparent" />
                                <!--android:background="#11118f4f"-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white_color"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:gravity="left"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/ageopersonaluse"
                                                android:text="@string/top_rated_products"
                                                android:textColor="#000000"
                                                android:textSize="17dp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:gravity="right">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/ageopersonaluse"
                                                android:text="@string/see_more"
                                                android:textColor="@color/themeColor"
                                                android:textSize="17dp" />

                                        </LinearLayout>

                                    </LinearLayout>


                                    <HorizontalScrollView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="5dp"
                                        android:scrollbars="none">

                                        <android.support.v7.widget.RecyclerView
                                            android:id="@+id/recycler_top_rated_product_detail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp" />


                                    </HorizontalScrollView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </android.support.v4.widget.NestedScrollView>

                    <LinearLayout
                        android:id="@+id/bottom_bar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/product_detail_add_to_cart_view"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:padding="9dp"
                                android:src="@drawable/ic_shopping_cart_theme_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/product_detail_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:padding="9dp"
                                android:src="@drawable/ic_textsms_theme_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/product_detail_pay_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/themeColor"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/ageopersonaluse"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/pay"
                                android:textColor="@color/white_color"
                                android:textSize="21dp" />

                        </LinearLayout>


                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>