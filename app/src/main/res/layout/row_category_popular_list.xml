<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_popular_shimmer"
        >



    <!--First Card-->
    <LinearLayout
        android:id="@+id/category_discount_card"
        android:layout_width="170dp"
        android:layout_height="310dp"
        android:background="@android:color/transparent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:mlns="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/category_discount_image"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="#00ffffff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_image_laptop"
                    app:sriv_left_bottom_corner_radius="0dp"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_right_bottom_corner_radius="0dp"
                    app:sriv_right_top_corner_radius="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="215dp"
                    android:layout_marginRight="15dp"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/category_discount_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:background="@color/placeholder_grey"
                        android:text="                                   "
                        android:textColor="#000000" />


                    <TextView
                        android:id="@+id/category_discount_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/placeholder_grey"
                        android:layout_marginTop="1dp"
                        android:text="            "
                        android:textColor="@color/themeColor"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/category_discount_review_count"
                            android:layout_width="wrap_content"
                            android:background="@color/placeholder_grey"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_vertical"
                            android:text="       "
                            android:textSize="11dp" />

                        <ImageView
                            android:id="@+id/category_discount_rating_bar"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="3.6dp"
                            android:src="@drawable/ic_star_grey_24dp"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="end">


                            <TextView
                                android:id="@+id/category_discount_items_sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:gravity="bottom"
                                android:text=""
                                android:textSize="11dp" />
                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="14dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--<LinearLayout-->
