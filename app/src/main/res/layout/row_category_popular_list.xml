            <!--android:gravity="center"-->
            <!--android:text="10%"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="16dp" />-->

            <!--</LinearLayout>-->


        </FrameLayout>


    </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>
