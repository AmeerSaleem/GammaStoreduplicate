<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginIntroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/dimmer" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/store_logo"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:background="@drawable/curved_view_transparent_white_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.1">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ageopersonaluse"
                            android:text="GAMMA"
                            android:textColor="@color/white_color"
                            android:textSize="27dp"
                            app:layout_constraintTop_toTopOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_store_tag"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/store_logo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.06"
                        >

                        <TextView
                            android:gravity="center"
                            android:lineSpacingExtra="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/find_the_best_products_at_the_gamma_shop"
                            android:textColor="@color/white_color"
                            android:fontFamily="@font/ageopersonaluse"
                            android:textSize="17dp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/sign_up_button"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:background="@drawable/curved_view_transparent_sharp_white_border"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/login_store_tag"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ageopersonaluse"
                            android:text="@string/sign_up"
                            android:textColor="@color/white_color"
                            android:textSize="23dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/skip_button"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_button"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.00"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:background="@color/white_color"
                            />

                        <TextView
                            android:id="@+id/skip_text"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color"
                            android:textSize="23dp"
                            android:text="@string/or_skip"
                            android:fontFamily="@font/ageopersonaluse"
                            />


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:background="@color/white_color"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_button"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/skip_button"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.04"
                        android:background="@drawable/curved_view_transparent_sharp_white_border"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color"
                            android:textSize="23dp"
                            android:text="@string/login"
                            android:fontFamily="@font/ageopersonaluse"
                            />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>