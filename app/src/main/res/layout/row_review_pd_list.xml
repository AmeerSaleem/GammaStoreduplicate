<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/review_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reviewer_1"
                app:sriv_left_bottom_corner_radius="90dp"
                app:sriv_left_top_corner_radius="90dp"
                app:sriv_right_bottom_corner_radius="90dp"
                app:sriv_right_top_corner_radius="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/review_rating"
                    style="@style/Base.Widget.AppCompat.RatingBar.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:numStars="5"
                    android:padding="0dp"
                    android:rating="4"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="16th April 2019"
                    android:textColor="#595959" />

            </LinearLayout>

            <TextView
                android:id="@+id/review_comments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/ageopersonaluse"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="Reviewers comments go here.Lorem Ipsum is something something something something" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>