                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/recommended_review_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/curved_view_basic"
                            android:gravity="center_vertical"
                            android:text="      "
                            android:textSize="11dp" />

                        <RatingBar
                            android:id="@+id/recommended_rating_bar2"
                            style="?attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="3.6dp"
                            android:background="@color/placeholder_grey"
                            android:numStars="1"
                            android:rating="1"
                            android:stepSize="0.1"
                            android:theme="@style/RatingBar"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            >

                            <TextView
                                android:id="@+id/recommended2_grey_star2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:background="@drawable/ic_star_grey_24dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_gravity="end"
                                    android:id="@+id/recommended_items_sold2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:background="@drawable/curved_view_basic"
                                    android:text="                       "
                                    android:textSize="11dp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="14dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>



</LinearLayout>