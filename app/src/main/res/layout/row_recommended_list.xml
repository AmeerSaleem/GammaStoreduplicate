<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flash_sale_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="2">




        <!--First Card-->
        <LinearLayout
            android:id="@+id/recommended_first_card"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <!--this used to be shimmer1-->
    <LinearLayout
        android:id="@+id/recommended2_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="@android:color/transparent"
        >

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:mlns="http://schemas.android.com/tools"
                android:id="@+id/recommended_first_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                mlns:app="http://schemas.android.com/apk/res-auto">

                <!--<LinearLayout-->
                <!--android:elevation="8dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical"-->
                <!--&gt;-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/discount_box"-->
                <!--android:elevation="5dp"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:textColor="#ffffff"-->
                <!--android:text="10%"-->
                <!--android:fontFamily="@font/ageopersonaluse"-->
                <!--android:gravity="center"-->
                <!--/>-->

                <!--</LinearLayout>-->


                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/recommended_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_image_laptop"
                    app:sriv_left_bottom_corner_radius="0dp"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_right_bottom_corner_radius="0dp"
                    app:sriv_right_top_corner_radius="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="165dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recommended_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/curved_view_basic"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="                                              "
                        android:textColor="#000000" />


                    <TextView
                        android:id="@+id/recommended_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/curved_view_basic"
                        android:text="              "
                        android:textColor="@color/themeColor"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/recommended_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/curved_view_basic"
                            android:gravity="center_vertical"
                            android:text="      "
                            android:textSize="11dp" />

                        <RatingBar
                            android:id="@+id/recommended_rating_bar"
                            style="?attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="3.6dp"
                            android:background="@color/placeholder_grey"
                            android:numStars="1"
                            android:rating="1"
                            android:stepSize="0.1"
                            android:theme="@style/RatingBar"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            >

                            <TextView
                                android:id="@+id/recommended2_grey_star"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:background="@drawable/ic_star_grey_24dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:orientation="vertical">

                            <TextView
                                android:layout_gravity="end"
                                android:id="@+id/recommended_items_sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/curved_view_basic"
                                android:text="                       "
                                android:textSize="11dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="14dp" />
                </LinearLayout>


            </android.support.v7.widget.CardView>
    </LinearLayout>

        </LinearLayout>

        <!--Second Card-->
        <LinearLayout
            android:id="@+id/recommended_second_card"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <!--this used to be shimmer2-->
            <LinearLayout
                android:id="@+id/recommended2_shimmer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                >

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:mlns="http://schemas.android.com/tools"
                android:id="@+id/recommended_second_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                mlns:app="http://schemas.android.com/apk/res-auto">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/recommended_product_image2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:sriv_left_bottom_corner_radius="0dp"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_right_bottom_corner_radius="0dp"
                    app:sriv_right_top_corner_radius="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="165dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recommended_product_name2"
                        android:layout_width="wrap_content"
