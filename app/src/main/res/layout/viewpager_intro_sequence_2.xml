<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/trend_gradient_theme_final_chrome_intro"
    >
    <!--android:background="@color/lightThemeColor"-->


    <ImageView
        android:id="@+id/shop_png_image1"
        android:layout_width="170dp"
        android:layout_height="195dp"
        android:src="@drawable/shopper23"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.38"
        />

    <TextView
        android:id="@+id/shop_intro_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shop_png_image1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.08"
        android:textColor="@color/themeColor"
        android:textSize="23dp"
        android:fontFamily="@font/ageopersonaluse"
        android:text="@string/choose_items"
        android:textStyle="bold"
        />

    <TextView
        android:gravity="center"
        android:id="@+id/shop_intro_text_desc"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shop_intro_text_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.03"
        android:textColor="@color/themeColor"
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:fontFamily="@font/ageopersonaluse"
        android:text="@string/choose_items_wherever_you_are_with_this_application_to_make_life_easier"
        />

</android.support.constraint.ConstraintLayout>